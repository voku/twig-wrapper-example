<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="{{ language }}" itemscope itemtype="http://schema.org/WebPage"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8" lang="{{ language }}" itemscope itemtype="http://schema.org/WebPage"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9" lang="{{ language }}" itemscope itemtype="http://schema.org/WebPage"> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="{{ globalArray['language'] }}" itemscope itemtype="http://schema.org/WebPage"> <!--<![endif]-->
<head>
  {% block head %}

    <title>{{ globalArray['title'] }}</title>

    {% block head_meta %}

      <meta charset="utf-8">
      <meta http-equiv="content-language" content="{{ globalArray['language'] }}">
      <meta http-equiv="cleartype" content="on">
      <meta itemprop="image" content="{{ globalArray['image'] }}">

      <meta name="viewport" content="width=device-width, initial-scale=1.0" />

      <meta name="twitter:card" content="summary">
      <meta name="twitter:site" content="{{ globalArray['site'] }}">
      <meta name="twitter:title" content="{{ globalArray['title'] }}">
      <meta name="twitter:description" content="{{ globalArray['description']}}">
      <meta name="twitter:image" content="{{ globalArray['image'] }}">

      <meta property="og:title" content="{{ globalArray['title'] }}">
      <meta property="og:description" content="{{ globalArray['description'] }}">
      <meta property="og:type" content="{{ globalArray['description']}}">
      <meta property="og:url" content="{{ globalArray['canonical'] }}">
      <meta property="og:image" content="{{ globalArray['image'] }}">
      <meta property="og:site_name" content="{{ globalArray['myName'] }}">

    {% endblock %}

    {# CSS #}
      {% block head_css %}
        <link rel="stylesheet" href="vendor/bower/font-awesome/css/font-awesome.css">
        <link rel="stylesheet" href="css/app.css">
      {% endblock %}

      {% flush %}

      {# JavaScript #}
      {% block head_js %}
      {% endblock %}

      {% flush %}

      <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
    {% endblock %}
  </head>
  <body id="page{{ page_id }}" class="{{ page_template }}">

  <div class="navbar-wrapper">
    <div class="container">

      <div class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Project name</a>
          </div>
          <div class="navbar-collapse collapse">
            {{ bootstrap_menu | raw }}
          </div>
        </div>
      </div>

    </div>
  </div>

  {% block carousel %}
    {% include 'inc_carousel.twig' %}
  {% endblock %}

  <div class="container marketing">

    {% block layout %}{% endblock %}

    {% block footer %}
      <footer>
        <p class="pull-right"><a href="#">Back to top</a></p>
        <p>&copy; {{ "now" | date("Y") }} Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
      </footer>
    {% endblock %}

  </div>{# /.container #}

  {# JavaScript #}
  {% block footer_js %}
    {{ getHtmljQuery('vendor/bower/jquery/dist/jquery.min.js') | raw }}
    <script src="vendor/bower/bootstrap-sass/dist/js/bootstrap.min.js"></script>
    <!-- only for example-images -->
    <script src="vendor/bower/bootstrap-sass/docs-assets/js/holder.js"></script>
    <script src="js/app.js"></script>
  {% endblock %}

  </body>
</html>